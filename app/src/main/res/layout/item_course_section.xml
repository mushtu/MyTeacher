<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_section_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="وضعیت کلاس: تمام نشده"
        app:layout_constraintRight_toLeftOf="@+id/img_profile"
        app:layout_constraintTop_toBottomOf="@+id/txt_mobile_number" />

    <TextView
        android:id="@+id/txt_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="شماره تماس: ۰۹۱۹۸۱۴۵۸۷۰"
        app:layout_constraintRight_toLeftOf="@+id/img_profile"
        app:layout_constraintTop_toBottomOf="@+id/txt_course_name" />

    <TextView
        android:id="@+id/txt_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="درس: حسابان"
        app:layout_constraintRight_toLeftOf="@+id/img_profile"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_title" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_profile_image" />

    <TextView
        android:id="@+id/txt_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="دانش آموز: "
        app:layout_constraintRight_toLeftOf="@+id/img_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_close_section"
        style="@style/Widget.AppCompat.ActionButton.CloseMode"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="پایان کلاس"
        android:textColor="@color/accent"
        app:layout_constraintRight_toLeftOf="@+id/img_profile"
        app:layout_constraintTop_toBottomOf="@+id/txt_section_state"
        tools:layout_editor_absoluteX="136dp" />

    <TextView
        android:id="@+id/txt_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="علی امیری"
        app:layout_constraintRight_toLeftOf="@+id/txt_name_title"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>